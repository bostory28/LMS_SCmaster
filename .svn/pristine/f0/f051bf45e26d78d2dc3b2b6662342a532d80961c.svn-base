<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bbs">
	
	<!-- 게시판 전체 글 개수 
	** 검색조건이 있을 때와 없을 때를 구분하여 게시글 수 조회  - 동적SQL의 if문 사용
-->
<select id="getTotal" parameterType="hashmap" resultType="int">
	
	select 
	 count(*) 
	  from board 
	<if test="searchText !=null">
		where title like '%'||#{searchText}||'%'
	</if>
	
</select>



<!-- 게시판 목록 
	** 검색조건이 있을 때와 없을 때를 구분하여 목록 조회  - 동적SQL의 if문 사용
-->
<select id="listBoard" parameterType="hashmap" resultType="board">
		
	select
	  *
	   from board 
	<if test="searchText !=null">
			where title like '%'||#{searchText}||'%'
	</if>
	order by boardnum desc
</select>
	
<!-- 게시판 글정보 자세히 읽기	-->
<select id="bbsDetail" parameterType="int" resultType="board">
		
	select 
	 *
	  from board 
	  	where boardnum = #{boardnum}
</select>	

<!-- 읽은 게시글 조회수 늘리기  -->
<update id="viewCount" parameterType="int">
update 
	 board
	  set 
	   viewcount=viewcount+1
	    where 
	     boardnum = #{boardnum}
</update>




<!-- 게시판 새로운 글 입력	-->
		
<insert id="writeNew" parameterType="board">
	
		insert
		 into
		  board
		  (    	boardnum
		 		,id
		 		,inputdate
		 		,viewcount
		 		,title
		 		,content
		 		<!-- 파일명이 있을때만 사용 -->  
		  <if test="savedfile !=null and originalfile !=null">
				,savedfile
				,originalfile		
		  </if>
		 	    ,boardtype)
		values
		(
		
			SEQ_board_boardnum.nextval
			,#{id}
			,#{inputdate}
			,#{viewcount}
			,#{title}
			,#{content}
		<if test="savedfile !=null and originalfile !=null">
			,#{savedfile}
			,#{originalfile}	
		</if>
	   		,#{boardtype})		
			
			

</insert>

	
<!-- 특정 게시물 하나 지우기	-->
<delete id="bbsDelete" parameterType="int">
		
	delete board
	where boardnum =#{boardnum}
	
</delete>	


	
<!-- 특정 게시물 하나 수정하기	-->
<update id="bbsEdit" parameterType="board">
	update 
	 board
	  set title = #{title}
	 , content	= #{content}	
	<if test="savedfile !=null and originalfile !=null">		
		,savedfile = #{savedfile}			
		,originalfile= #{originalfile}		
	</if>
		 where boardnum = #{boardnum}
</update>

<!-- =================== 댓글 관련 ==================	-->
<!-- 댓글 리스트 -->
<select id="listReply" parameterType="int" resultType="reply">
	select 
	 *
	  from 
	   reply
	     where
	      boardnum= #{boardnum}
	      order by 
	      	inputdate
</select>




<!-- 댓글 달기 -->
<insert id="insertReply" parameterType="reply">
	insert 
	 into 
      reply(replynum,boardnum,id,retext)

       values(
        SEQ_reply_replynum.nextval
		,#{boardnum}	
		,#{id}			
		,#{retext}
  		)
</insert>

<select id="replyCount" parameterType="int" resultType="int">
	
	select 
	 count(*) 
	  from  reply
		where boardnum = #{boardnum}
	
</select>

<delete id="deleteReply" parameterType="int">
	
	delete
		 reply
		  where
		  	replynum = #{replynum}
	
</delete>

<update id="updateReply" parameterType="reply">
	
	update 
	 reply
	  set retext = #{retext}
		 where replynum = #{replynum}

</update>

<!-- =================== 첨삭관련 ==================	-->
<insert id="insertPfdReply" parameterType="pfdreply">
	insert 
	 into 
     pfdreply(pfdnum,boardnum,userid,pfdstr,pfdcomment)

       values(
        SEQ_pfdreply_pfdnum.nextval	
		,#{boardnum}			
		,#{userid}
		,#{pfdstr}
  		,#{pfdcomment})
</insert>	
<!-- 현재 게시물 번호 구하기 -->	
<select id="getcurrval"  resultType="int">
	
	select 
	 max(pfdnum) 
	  from  pfdreply
		
</select>
	

<select id="pfdReplyList" parameterType="int" resultType="pfdreply">
	select 
	 *
	  from 
	   pfdreply
	     where
	      boardnum= #{boardnum}
	      order by 
	      	inputdate
</select>


	
	
</mapper>
